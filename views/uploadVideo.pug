extends layouts/main

block content
  .form-container
    .record-container#recordContainer
      video#videoPreview
      button#recordButton Start Recording
    form(action=`/videos${routes.uploadVideo}`, method="post", enctype="multipart/form-data")
      .fileUpload
          label(for="videoFile") Video File
          input(type="file", id="videoFile", name="videoFile", required=true, accept="video/*")
      input(type="text", placeholder="Title", name="title", required=true)
      input(type="text", placeholder="Description", name="description", required=true)
      input(type="submit", value="Upload Video")