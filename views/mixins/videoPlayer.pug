mixin videoPlayer(video={})
  .videoPlayer#videoPlayer
    video(src=`/${video.src}`)
    .videoPlayer__controls
      .videoPlayer__column
        span#volumeButton
          i.fas.fa-volume-up
        span
          span#currentTime 00:00:00
          |/&nbsp;&nbsp;&nbsp;
          span#totalTime 00:00:00
      .videoPlayer__column
        span#playButton
          i.fas.fa-play
      .videoPlayer__column
        span#fullScreenButton
          i.fas.fa-expand