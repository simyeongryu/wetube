mixin videoPlayer(video={})
  .videoPlayer#videoPlayer
    video(src=`/${video.src}`)
    .videoPlayer__controls
      .videoPlayer__column
        // HTMLMedia의 볼륨은 최소 0 최대 1이다.
        input.videoPlayer__volume#volumeRange(type="range" min="0" max="1" step="0.1" value="0.5")
        span#volumeButton
          i.fas.fa-volume-up
        span
          span#currentTime 00:00:00
          |/&nbsp;&nbsp;&nbsp;
          span#totalTime 00:00:00
      .videoPlayer__column
        span#playButton
          i.fas.fa-play
      .videoPlayer__column
        span#fullScreenButton
          i.fas.fa-expand